# NetWiz Project Environment Configuration
# This is the main environment file that can reference service-specific files
# Copy this file to .env and modify as needed

# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================
# Project name
PROJECT_NAME=NetWiz

# Project version
PROJECT_VERSION=1.0.0

# Project description
PROJECT_DESCRIPTION=PCB Netlist Visualizer + Validator

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Overall environment mode: development, staging, production
ENVIRONMENT=development

# Enable debug mode globally
DEBUG=true

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
# Backend service configuration
BACKEND_HOST=localhost
BACKEND_PORT=5000
BACKEND_URL=http://localhost:5000

# Frontend service configuration
FRONTEND_HOST=localhost
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# Database service configuration
DATABASE_HOST=localhost
DATABASE_PORT=27017
DATABASE_NAME=netwiz

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Main MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/netwiz

# Database name
MONGODB_DATABASE=netwiz

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker Compose project name
COMPOSE_PROJECT_NAME=netwiz

# Docker network name
DOCKER_NETWORK=netwiz-network

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable hot reload for development
HOT_RELOAD=true

# Enable development tools
DEV_TOOLS=true

# Log level for development
LOG_LEVEL=DEBUG

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Production domain
# PRODUCTION_DOMAIN=yourdomain.com

# SSL configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Enable monitoring
# ENABLE_MONITORING=true

# Monitoring port
# MONITORING_PORT=9090

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Global secret key
# SECRET_KEY=your-global-secret-key-here

# Session configuration
# SESSION_SECRET=your-session-secret-here

# =============================================================================
# SERVICE-SPECIFIC ENVIRONMENT FILES
# =============================================================================
# You can reference service-specific environment files:
# BACKEND_ENV_FILE=backend/.env
# FRONTEND_ENV_FILE=frontend/.env

# =============================================================================
# EXAMPLES FOR DIFFERENT ENVIRONMENTS
# =============================================================================

# Development Environment:
# ENVIRONMENT=development
# DEBUG=true
# HOT_RELOAD=true
# LOG_LEVEL=DEBUG
# BACKEND_URL=http://localhost:5000
# FRONTEND_URL=http://localhost:3000

# Staging Environment:
# ENVIRONMENT=staging
# DEBUG=false
# HOT_RELOAD=false
# LOG_LEVEL=INFO
# BACKEND_URL=https://api-staging.yourdomain.com
# FRONTEND_URL=https://staging.yourdomain.com

# Production Environment:
# ENVIRONMENT=production
# DEBUG=false
# HOT_RELOAD=false
# LOG_LEVEL=WARNING
# BACKEND_URL=https://api.yourdomain.com
# FRONTEND_URL=https://yourdomain.com
# PRODUCTION_DOMAIN=yourdomain.com
