# NetWiz Backend Environment Configuration
# Copy this file to .env and modify as needed

# Environment
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://admin:password@mongodb:27017/netwiz?authSource=admin
MONGODB_DATABASE=netwiz

# CORS Configuration
CORS_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
API_PREFIX=/api

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Configuration (CHANGE THESE IN PRODUCTION!)
PASSWORD_PEPPER=another-secret-change-me
ADMIN_TEMP_PASSWORD=admin
